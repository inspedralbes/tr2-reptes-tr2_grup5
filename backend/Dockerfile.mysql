FROM mysql:8.0

# Copy custom entrypoint that clears the data directory and delegates to the
# official mysql entrypoint so init scripts in /docker-entrypoint-initdb.d
# are executed on every start.
COPY custom-entrypoint.sh /usr/local/bin/custom-entrypoint.sh
RUN chmod +x /usr/local/bin/custom-entrypoint.sh

ENTRYPOINT ["/usr/local/bin/custom-entrypoint.sh"]
CMD ["mysqld"]
